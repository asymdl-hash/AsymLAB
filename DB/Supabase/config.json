{
    "version": "1.0",
    "description": "Configuração do sistema de backup local do Supabase",
    "backup": {
        "base_path": "F:\\AsymLAB\\DB\\Supabase",
        "retention_days": 30,
        "default_mode": "auto",
        "full_backup_interval_days": 7,
        "schedule": {
            "enabled": true,
            "time": "23:30",
            "description": "Backup diário às 23:30"
        }
    },
    "supabase": {
        "url_env": "NEXT_PUBLIC_SUPABASE_URL",
        "key_env": "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "tables": [
            "clinics",
            "clinic_contacts",
            "clinic_delivery_points",
            "clinic_discounts",
            "delivery_point_contacts",
            "organization_settings",
            "user_profiles",
            "user_clinic_access",
            "doctor_clinic_partners",
            "work_types",
            "system_settings",
            "patients",
            "patient_doctors",
            "treatment_plans",
            "phases",
            "phase_materials",
            "appointments",
            "considerations",
            "consideration_attachments",
            "consideration_templates",
            "consideration_template_fields",
            "consideration_template_usage",
            "consideration_template_shares",
            "consideration_versions",
            "files",
            "work_status_catalog",
            "plan_badges",
            "invoices",
            "receipts",
            "patient_documents",
            "transport_guides",
            "guide_items",
            "guide_item_catalog",
            "materials",
            "tooth_colors"
        ]
    },
    "notes": {
        "nas_migration": "Para migrar para NAS, basta alterar o 'base_path' para o caminho da NAS montada (ex: '\\\\NAS\\AsymLAB\\DB\\Supabase' ou 'Z:\\AsymLAB\\DB\\Supabase')",
        "new_tables": "Ao criar novas tabelas no Supabase, adicionar ao array 'tables' para serem incluídas no backup"
    }
}